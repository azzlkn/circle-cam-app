{
  "name": "circle-cam-app",
  "version": "1.0.0",
  "description": "Circle Cam App is an open source round webcam app that is always in the top window",
  "main": "main.js",
  "homepage": "https://github.com/azzlkn/circle-cam-app",
  "author": {
    "name": "Aziz Alkan",
    "email": "azzlkn@gmail.com",
    "url": "http://www.azzlkn.com/"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3"
  },
  "build": {
    "productName": "Circle Cam App",
    "appId": "com.electron.circle-cam-app",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png"
    },
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "build/icon.png"
    }
  }
}
